<div class="container">
    <div class="row">
        <div class="col-lg-4 mx-auto text-center">
            <h2><%= @category.name %>にスキルを追加</h2>
        </div>
    </div>

    <div class="container">
        <%= form_with model: @skill, local: true do |f| %>

            <%= f.hidden_field :category_id, {value: @category.id} %>
        
            <div class="row justify-content-center">
                <div class="col-5 mx-auto">
                    <%= f.label :習得スキル名, class: "form-label" %>
                    <%= f.text_field :name, class: "form-control" %>
                </div>
            </div>
            <div class="row">
                <div class="col-5 mx-auto">
                    <%= f.label :習得レベル, class: "form-label" %>
                    <%= f.number_field :proficiency_level, in: 0..100, class: "form-control" %>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-3 mx-auto">
                    <%= f.submit "追加する", class: "form-button" %>
                </div>
            </div>
        <% end %>
    </div>
</div>
